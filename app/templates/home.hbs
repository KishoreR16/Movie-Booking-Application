{{page-title "Home"}}
{{!-- template-lint-disable no-implicit-this --}}
{{!-- template-lint-disable no-inline-styles --}}
<Logout/>
<header>
        <h1>Ticket New</h1>
</header>

<div id="myCarousel" class="carousel slide" data-ride="carousel"
    style="margin-left:1.5%;margin-top:3%;margin-right:1.5%;">
    <ol class="carousel-indicators" id="div1">
    </ol>
    <div class="carousel-inner">
        {{#each @model.slides as |slide|}}
        <div class="item {{slide.active}}">
            {{!-- template-lint-disable no-inline-styles --}}
            <img src={{slide.path}} alt={{slide.name}} style="width:100%;height:300px;">
        </div>
        {{this.addIndicators}}
        {{/each}}
    </div>

    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>



{{!-- template-lint-disable no-inline-styles --}}
<p id="save" style="visibility:hidden">0</p>
{{#each @model.movies as |movie|}}

<columnType>
    <LinkTo @route="movies" @model={{movie.name}} style="text-decoration:none;">
        <div class="movie-grid">
            <div class="grid-details grid-item">
                <h1>{{movie.name}}</h1>
                <p>{{movie.genre}}</p>
                <p style="color:white;"><i class="fa fa-star"></i>{{movie.rating}}</p>
            </div>
            <div class="grid-image grid-item">
                <img src={{movie.path}} alt={{movie.name}}>
                <div class="icon1">
                    <i class='fas fa-snowflake'></i>
                </div>
                <div class="icon2">
                    <i class='fas fa-hat-wizard'></i>
                </div>
            </div>
        </div>
    </LinkTo>
</columnType>
{{this.result}}
{{!-- template-lint-disable no-curly-component-invocation --}}
{{increment}}


{{/each}}